{{> header}}

<div class="container">
    <h4 class="" style="text-align: center; margin-top: -35px;">CHI TIẾT MÓN ĂN</h4>
    <form method="POST" action="/admin/banhang/themmathang" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="name" class="form-label">Tên món</label>
            <input type="text" class="form-control" id="name" disabled name="name" value="{{dish.name}}">
        </div>
        
        <div class="mb-3">
            <label for="price" class="form-label">Giá</label>
            <input type="number" class="form-control" id="price" disabled name="price" value="{{dish.price}}"> 
        </div>

        <div class="mb-3">
            <label for="quantity" class="form-label">Nguyên liệu</label>
        </div>

        <table id="table" class="table">
                    <thead class="thead-light">
                        <tr>
                        {{!-- <th scope="col">#</th> --}}
                        <th scope="col">Tên nguyên liệu</th>
                        <th scope="col">Số lượng</th>
                        <th scope="col">Đơn vị</th>
                        {{!-- <th scope="col">Thành tiền</th> --}}
                        </tr>
                    </thead>
                    <tbody>                        
                            {{#each dish.ingredients}}
                            <tr>
                                <td>{{this.nameIn}}</td>
                                <td>{{this.quantity}}</td>
                                <td>{{this.donviIn}}</td>
                            </tr>
                            {{/each}}

                    </tbody>
                </table>

    </form>
    <button class="btn btn-secondary" onclick="location.href='/menu/{{dish._id}}/edit'">Sửa</button>
    <button class="btn btn-danger" onclick="location.href='/menu/{{dish._id}}/delete'">Xóa</button>
</div>