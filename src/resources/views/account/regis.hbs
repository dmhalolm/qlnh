<link rel="stylesheet" href="/css/regis.css">
{{>header}}


<div class="formregis">
      <h1>Tạo tài khoản mới</h1>
      <form method="POST" action="/account/regis">
        <div class="mb-3">
            <label for="name" class="form-label">Tên đăng nhập </label>
            <input type="text" class="form-control" required id="username" name="username" placeholder="Tên đăng nhập">
        </div>
        <div class="mb-3">
            <label for="name" class="form-label">Mật khẩu</label>
            <input type="password" class="form-control" required id="password" name="password" placeholder="Mật khẩu">
        </div>

        <p style="text-align: center; color: red; margin-top: 10px;">{{{errors}}}</p>

        <input id="submitbutton" type="submit" value="Tạo tài khoản" />
    </form>
</div>